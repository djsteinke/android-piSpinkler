<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PiSprinkler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/off_white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/orange</item>

        <item name="colorAccent">@color/dark_blue</item>

        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="actionBarStyle">@style/myActionBar</item>
        <item name="android:actionBarStyle">@style/myActionBar</item>
        <!-- Status bar color. -->
        <item name="android:colorPrimary">@color/dark_blue</item>
        <item name="android:colorPrimaryDark">@color/dark_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/off_white</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
    </style>

    <style name="myActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/blue</item>
        <item name="background">@color/blue</item>
        <item name="android:displayOptions">showHome|useLogo|showTitle</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
    </style>

    <style name="myRecyclerView" parent="Theme.PiSprinkler">
        <item name="colorOnSecondary">@color/off_black</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>