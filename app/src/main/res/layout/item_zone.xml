<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="8dp"
    android:background="@drawable/rectangle_r_c_zone_item"
    android:layout_margin="@dimen/zone_item_margin">
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:justifyContent="space_evenly">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/zone_id"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_zone_ring_24"
                android:backgroundTint="@color/blue"
                android:text="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/zone_item_text"
                android:textStyle="bold"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/zone_type_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_zone_type_24"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/zone_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Fixed"
                android:gravity="center"
                android:textSize="@dimen/zone_item_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zone_pin_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_zone_pin_24"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/zone_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/zone_item_text"/>
        </LinearLayout>

    </com.google.android.flexbox.FlexboxLayout>
</FrameLayout>
