<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="8dp"
    android:background="@drawable/rectangle_r_c_zone_item"
    android:layout_margin="@dimen/zone_item_margin">

        <TextView
            android:id="@+id/zone_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_zone_24"
            android:backgroundTint="@color/blue"
            android:text="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/zone_item_text"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/zone_type_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_zone_type_24"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@id/zone_id"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/zone_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Fixed"
            android:gravity="center"
            android:textSize="@dimen/zone_item_text"
            app:layout_constraintStart_toEndOf="@id/zone_type_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/zone_pin_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_zone_pin_24"
            android:layout_gravity="center"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/zone_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:textSize="@dimen/zone_item_text"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/zone_pin_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
